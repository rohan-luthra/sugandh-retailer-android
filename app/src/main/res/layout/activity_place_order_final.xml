<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".PlaceOrder.PlaceOrderFinalActivity"
    >

    <android.support.v7.widget.Toolbar
        android:id="@+id/tb_toolbarsearch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        android:visibility="gone"
        />

    <ImageView
        android:id="@+id/preview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:layout_centerInParent="true"

        />
    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="36dp"
        android:src="@drawable/lotus"
        android:layout_centerInParent="true"
        android:id="@+id/lotus"

        android:layout_below="@+id/preview_logo"
        android:visibility="gone"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Loading..."
        android:textColor="@color/white"
        android:layout_below="@+id/lotus"
        android:id="@+id/lotus_loading"
        android:layout_centerInParent="true"
        android:layout_marginTop="6dp"
        android:textSize="20sp"
        android:visibility="gone"

        />

    <ImageView
        android:id="@+id/audioBtn"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/preview_play_button"
        android:layout_centerInParent="true"
        />
    <TextView
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:background="@drawable/colorprimary_bg_with_transparency"
        android:text="@string/previewText"
        android:padding="8dp"
        android:textColor="@color/white"
        android:gravity="center"
        android:textSize="18dp"
        android:id="@+id/preview_logo"
        android:layout_above="@+id/preview"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="-50dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/audioBtn"
        android:layout_centerHorizontal="true"
        android:id="@+id/preview_message"
        android:text="@string/playPreviewMessage"
        android:textSize="16dp"
        android:gravity="center"
        android:textColor="@color/white"
        android:background="@drawable/colorprimary_bg_with_transparency"
        android:paddingHorizontal="16dp"
        android:paddingVertical="8dp"
        android:layout_marginTop="8dp"/>



    <TextView
        android:id="@+id/placeOrder1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/bottom_bar"
        android:layout_marginHorizontal="4dp"
        android:textColor="@color/white"
        android:singleLine="true"
        android:textSize="18dp"
        android:gravity="center"
        android:layout_weight="2"
        android:layout_marginBottom="2dp"

        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:id="@+id/placeOrder"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:autoSizeMinTextSize="10dp"
        android:autoSizeStepGranularity="1dp"
        android:autoSizeTextType="uniform"
        app:autoSizeMaxTextSize="18dp"
        android:lines="1"
        app:autoSizeMinTextSize="10dp"
        app:autoSizeStepGranularity="1dp"
        app:autoSizeTextType="uniform"
        android:layout_marginLeft="4dp"
        android:layout_toLeftOf="@+id/send_button"
        android:layout_toStartOf="@+id/send_button"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="2dp"/>
    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/send_button_bg"
        android:id="@+id/send_button"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="4dp"
        android:layout_marginBottom="2dp"
        />


</RelativeLayout>